@page
@model IndexModel
@{
    ViewData["Title"] = "Certificado";
}

<div class="container-example-linea-avance-govco">
	<div class="p-5">
		<h1>
			Certificado De Propiedad Horizontal
		</h1>
	</div>
	<div class="linea-avance-govco iv-linea-avance-govco" id="lineaAvance4">
		<div class="progress">
			<div class="progress-bar" role="progressbar" style="height: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="item-linea-avance-govco active-linea-avance-govco">
			<div class="header-linea-avance-govco">
				<button class="indicator-linea-avance-govco" type="button" data-la-target="#itemLineaAvance41" percentage="15">
					<span>1</span>
				</button>
				<span class="title-linea-avance-govco">Paso 1</span>
			</div>
			<div id="itemLineaAvance41" class="body-linea-avance-govco" data-la-parent="#lineaAvance4">
				<div class="contents-linea-avance-govco" style="width:100%">
					<!-- Contenido Item -->
					<div class="contents-example-linea-avance-govco">
                        <form id="nitForm" method="post" asp-action="/Home/GuardarDatos" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12 col-xs-12 col-sm-6">
                                    <div class="entradas-de-texto-govco">
                                        <label for="input-basico-id">Nit<span aria-required="true">*</span></label>
                                        <input type="text" id="input-basico-id" min="1"  placeholder="Ingresa tu número" name="Nit"/>
                                    </div>
									<div class="entradas-de-texto-govco mt-2">
										<label for="input-basico-id">Cedula<span aria-required="true">*</span></label>
										<input type="text" id="input-basico-cc" min="1" placeholder="Ingresa tu número" name="Cc" />
									</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
								<button id="continue-btn" type="submit" class="btn-govco fill-btn-govco" style="width: 165px; height: 42px; margin-top: 23px;" onclick="verificar(event)">Consultar</button>
                            </div>
                        </form>
					</div>
				</div>
			</div>
		</div>
		<div class="item-linea-avance-govco">
			<div class="header-linea-avance-govco">
				<button class="indicator-linea-avance-govco" type="button" data-la-target="#itemLineaAvance42" percentage="100">
					<span>2</span>
				</button>
				<span class="title-linea-avance-govco">Paso 2</span>
			</div>
			<div id="itemLineaAvance42" class="body-linea-avance-govco" data-la-parent="#lineaAvance4">
				<div class="contents-linea-avance-govco" style="width:50%">
					<!-- Contenido Item -->
					<div class="col contents-example-linea-avance-govco">
						<div class="row gx-0 justify-content-between">
							<div class="col-7">
								<ul id="resultContainer">

								</ul>
                            </div>
                            <div class="col-3">
                                <button type="button" class="w-100 p-4 btn-govco fill-btn-govco" onclick="nextItemAdvanceLineIVertical(event)">Descargar</button>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div>


<div class="container-modal-govco position-fixed z-3" id="modal_error" style="z-index:30; top:35%; left:40%; display: none">
    <div class="modal-container-govco" id="exampleModalError" tabindex="-1" data-bs-backdrop="false" data-bs-keyboard="false" aria-labelledby="exampleModalError" aria-hidden="true" aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-dialog-govco">
            <div class="modal-content modal-content-govco">
                <div class="modal-header modal-header-govco modal-header-alerts-govco">
                    <button type="button" disabled class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body modal-body-govco center-elements-govco">
                    <div class="modal-icon">
                        <span class="modal-icon-govco modal-error-icon"></span>
                    </div>
                    <h3 class="modal-title-govco error-govco">Error</h3>
					<p id="mensajeModal" class="modal-text-govco modal-text-center-govco">Información de detalle al cierre de la acción</p>
                </div>
                <div class="modal-footer-govco modal-footer-alerts-govco">
                    <div class="modal-buttons-govco justify-content-center">
                        <button type="button" class="btn btn-primary btn-modal-govco btn-contorno" onclick="cerrar()">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

