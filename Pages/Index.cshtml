@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-example-linea-avance-govco">
	<div>
		<h1>
			Formulario 
		</h1>
	</div>
	<div class="linea-avance-govco iv-linea-avance-govco" id="lineaAvance4">
		<div class="progress">
			<div class="progress-bar" role="progressbar" style="height: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="item-linea-avance-govco active-linea-avance-govco">
			<div class="header-linea-avance-govco">
				<button class="indicator-linea-avance-govco" type="button" data-la-target="#itemLineaAvance41" percentage="15">
					<span>1</span>
				</button>
				<span class="title-linea-avance-govco">Paso 1</span>
			</div>
			<div id="itemLineaAvance41" class="body-linea-avance-govco" data-la-parent="#lineaAvance4">
				<div class="contents-linea-avance-govco" style="width:50%">
					<!-- Contenido Item -->
					<div class="contents-example-linea-avance-govco">
                        <div class="row">
                            <div class="col-12 col-xs-12 col-sm-6">
                                <div class="entradas-de-texto-govco">
                                    <label for="input-basico-id">Nit<span aria-required="true">*</span></label>
                                    <input type="number" id="input-basico-id" min="1" max="99999999999" placeholder="Ingresa tu número" />
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button id="continue-btn" type="button" class="btn-govco fill-btn-govco" style="width: 165px; height: 42px; margin-top: 23px;" onclick="nextItemAdvanceLineIVertical(event)">Continuar</button>
                        </div>
					</div>
				</div>
			</div>
		</div>
		<div class="item-linea-avance-govco">
			<div class="header-linea-avance-govco">
				<button class="indicator-linea-avance-govco" type="button" data-la-target="#itemLineaAvance42" percentage="100">
					<span>2</span>
				</button>
				<span class="title-linea-avance-govco">Paso 2</span>
			</div>
			<div id="itemLineaAvance42" class="body-linea-avance-govco" data-la-parent="#lineaAvance4">
				<div class="contents-linea-avance-govco" style="width:50%">
					<!-- Contenido Item -->
					<div class="col contents-example-linea-avance-govco">
						<div class="d-flex justify-content-center">
							<button type="button" class="btn-govco fill-btn-govco" style="width: 200px; height: 60px; margin-top: 16px;" onclick="nextItemAdvanceLineIVertical(event)">Descargar</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div>

<div class="content-example-barra ">
	<div class="barra-accesibilidad-govco">
		<button id="botoncontraste" class="icon-contraste" onclick="cambiarContexto()">
			<span id="titlecontraste">Contraste</span>
		</button>
		<button id="botondisminuir" class="icon-reducir" onclick="disminuirTamanio('disminuir')">
			<span id="titledisminuir">Reducir letra</span>
		</button>
		<button id="botonaumentar" class="icon-aumentar" onclick="aumentarTamanio('aumentar')">
			<span id="titleaumentar">Aumentar letra</span>
		</button>
	</div>
	<div class="row m-5">
		<div id="para-mirar" class="barra-accesibilidad-letra">
			<br>
			<p class="titulo-barra-accesibilidad">&nbsp;Ejemplo barra de accesibilidad</p>
			<p class="descripcion-barra-accesibilidad">Descripción para ver el tamaño de la letra</p>
		</div>
	</div>
</div>

